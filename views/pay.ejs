<!doctype html>
<html lang="es" data-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/theme.css" rel="stylesheet">
    <title>Reserva creada</title>

    <style>
        .card-soft{
            background: var(--card);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            border-radius: 22px;
            overflow: hidden;
        }
        .top{
            padding: 18px 18px 14px;
            background:
                    radial-gradient(1000px 520px at 10% 0%, rgba(106,15,31,.20), transparent 55%),
                    radial-gradient(800px 420px at 90% 10%, rgba(106,15,31,.10), transparent 60%);
            border-bottom: 1px solid var(--border);
        }
        .body{ padding: 18px; }
        .title{
            letter-spacing: -.02em;
            font-weight: 650;
            margin: 0;
        }
        .meta{ color: var(--muted); font-size: .95rem; }

        .pill{
            display:inline-flex; align-items:center; gap:.5rem;
            padding:.45rem .75rem; border-radius:999px;
            border:1px solid var(--border);
            background: var(--chip-bg);
            color: var(--chip-text);
            font-weight:600; font-size:.9rem;
            white-space:nowrap;
        }

        .kv{
            list-style:none; padding:0; margin:0;
            display:grid; gap:.55rem;
        }
        .kv li{
            display:flex; justify-content:space-between; gap:12px;
            padding:.6rem .75rem;
            border:1px solid var(--border);
            border-radius:14px;
            background: color-mix(in srgb, var(--card) 86%, transparent);
        }
        .kv .k{ color: var(--muted); font-weight:500; }
        .kv .v{ color: var(--text); font-weight:500; text-align:right; }

        .btn-xs{
            padding:.5rem .8rem;
            border-radius:12px;
            font-weight:600;
            font-size:.95rem;
        }
        .btn-ghost{
            border:1px solid var(--border);
            background:transparent;
            color: var(--text);
        }
        .btn-ghost:hover{
            border-color: color-mix(in srgb, var(--wine) 40%, var(--border));
            background: color-mix(in srgb, var(--card) 70%, transparent);
            color: var(--text);
        }

        .note{
            border:1px solid var(--border);
            background: color-mix(in srgb, var(--card) 82%, transparent);
            border-radius: 16px;
            padding: 12px 14px;
            color: var(--muted);
        }

        .mono{
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono","Courier New", monospace;
            font-size: .95rem;
            color: var(--text);
            word-break: break-word;
        }
    </style>
</head>

<body>
<nav class="navbar navbar-dark app-navbar">
    <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <span class="brand-dot"></span>
            <span class="fw-semibold">TransportApp</span>
        </a>

        <button id="themeToggle" class="theme-btn" type="button" aria-label="Cambiar tema">
            <span id="themeIcon">ðŸŒ™</span> <span class="d-none d-sm-inline">Tema</span>
        </button>
    </div>
</nav>

<main class="container py-4">

    <div class="card-soft">
        <div class="top">
            <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
                <div>
                    <div class="pill">âœ… Reserva creada</div>
                    <h1 class="h3 title mt-2">Listo</h1>
                    <div class="meta mt-1">Tu folio es:</div>
                    <div class="mono mt-1" id="folioText"><%= folio %></div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-ghost btn-xs" id="copyBtn">Copiar folio</button>
                    <a class="btn btn-wine btn-xs" id="waBtn" target="_blank" href="#">Enviar por WhatsApp</a>
                </div>
            </div>
        </div>

        <div class="body">
            <ul class="kv mb-3">
                <li>
                    <span class="k">Ruta</span>
                    <span class="v" id="routeText"><%= r.direction === "VIC_TO_LLE" ? "Victoria - Llera" : "Llera - Victoria" %></span>
                </li>
                <li><span class="k">Fecha</span><span class="v" id="dateText"><%= r.trip_date %></span></li>
                <li><span class="k">Hora</span><span class="v" id="timeText"><%= r.depart_time %></span></li>
                <li><span class="k">Contacto</span><span class="v" id="nameText"><%= r.customer_name %></span></li>
                <li><span class="k">TelÃ©fono</span><span class="v" id="phoneText"><%= r.phone %></span></li>

                <!-- Opcionales: Tipo / Pasajeros / Detalles -->
                <% const _type = (r.reservation_type || r.type || r.booking_type || "").toString(); %>
                <% const _pax = (r.passengers || r.pax || "").toString(); %>
                <% const _pkg = (r.package_details || r.package_info || r.details || "").toString(); %>

                <% if (_type) { %>
                    <li><span class="k">Tipo</span><span class="v" id="typeText"><%= _type %></span></li>
                <% } else { %>
                    <li><span class="k">Tipo</span><span class="v" id="typeText">No especificado</span></li>
                <% } %>

                <% if (_pax) { %>
                    <li><span class="k">Pasajeros</span><span class="v" id="paxText"><%= _pax %></span></li>
                <% } else { %>
                    <li><span class="k">Pasajeros</span><span class="v" id="paxText"></span></li>
                <% } %>

                <% if (_pkg) { %>
                    <li><span class="k">PaqueterÃ­a</span><span class="v" id="pkgText"><%= _pkg %></span></li>
                <% } else { %>
                    <li><span class="k">PaqueterÃ­a</span><span class="v" id="pkgText"></span></li>
                <% } %>

                <li><span class="k">Estado</span><span class="v" id="statusText">Pendiente de confirmaciÃ³n</span></li>
            </ul>

            <div class="note">
                El ticket se emite cuando el administrador confirma el pago. Puedes enviar el folio por WhatsApp para agilizar.
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a class="btn btn-ghost btn-xs" href="/reserve">Nueva reserva</a>
                <a class="btn btn-ghost btn-xs" href="/">Volver al inicio</a>
            </div>
        </div>
    </div>

</main>

<script src="/js/theme.js"></script>

<!-- âœ… JSON seguro para evitar el error "Expression expected" en el editor -->
<script type="application/json" id="reservationJson"><%- JSON.stringify({
        folio,
        direction: r.direction,
        trip_date: r.trip_date,
        depart_time: r.depart_time,
        customer_name: r.customer_name,
        phone: r.phone,
        reservation_type: r.reservation_type || r.type || r.booking_type || "",
        passengers: r.passengers || r.pax || "",
        package_details: r.package_details || r.package_info || r.details || ""
    }).replace(/</g, "\\u003c") %></script>

<script>
    const copyBtn = document.getElementById('copyBtn');
    const waBtn = document.getElementById('waBtn');

    // NÃºmero del admin/servicio (a quien le llega el WhatsApp)
    const adminWa = "8344756376";

    function digitsOnly(s){ return String(s || '').replace(/\D/g,''); }

    // Datos (desde el JSON del servidor)
    const data = JSON.parse(document.getElementById("reservationJson")?.textContent || "{}");

    function niceRoute(dir){
        return dir === "VIC_TO_LLE" ? "Victoria â†’ Llera" : "Llera â†’ Victoria";
    }

    function niceType(t){
        const x = String(t || '').toLowerCase();
        if (x.includes('paq') || x.includes('pack')) return 'PaqueterÃ­a';
        if (x.includes('pas')) return 'Pasaje';
        return t ? t : 'No especificado';
    }

    const typeLabel = niceType(data.reservation_type);
    const isPackage = typeLabel.toLowerCase().includes("paqu");

    const lines = [
        "âœ… *Nueva reserva*",
        "",
        `ðŸ“Œ *Folio:* ${data.folio || "â€”"}`,
        `ðŸ‘¤ *Nombre:* ${data.customer_name || "â€”"}`,
        `ðŸ“ž *TelÃ©fono:* ${data.phone || "â€”"}`,
        `ðŸ§­ *Ruta:* ${niceRoute(data.direction)}`,
        `ðŸ“… *Fecha:* ${data.trip_date || "â€”"}`,
        `ðŸ•’ *Hora:* ${data.depart_time || "â€”"}`,
        `ðŸŽ« *Tipo:* ${typeLabel}`
    ];

    // Pasajeros (solo si aplica)
    const pax = Number(String(data.passengers || "").trim());
    if (!Number.isNaN(pax) && pax > 0 && typeLabel.toLowerCase().includes("pas")) {
        lines.push(`ðŸ‘¥ *Pasajeros:* ${pax}`);
    }

    // Estado fijo
    lines.push(`â³ *Estado:* Pendiente de confirmaciÃ³n`);

    // PaqueterÃ­a: detalles
    if (isPackage) {
        lines.push("");
        lines.push("ðŸ“¦ *Detalles de paqueterÃ­a:*");
        lines.push(data.package_details ? String(data.package_details) : "â€”");
    }

    // Link al sitio (Ãºtil)
    lines.push("");
    lines.push("ðŸŒ " + window.location.origin);

    const msg = lines.join("\n");

    // Link WhatsApp al admin
    const adminDigits = digitsOnly(adminWa);
    if (adminDigits.length >= 10) {
        waBtn.href = `https://wa.me/52${adminDigits}?text=${encodeURIComponent(msg)}`;
    } else {
        waBtn.classList.add('disabled');
        waBtn.setAttribute('aria-disabled','true');
    }

    // Copiar folio
    copyBtn?.addEventListener('click', async () => {
        try{
            await navigator.clipboard.writeText(String(data.folio || ''));
            const old = copyBtn.textContent;
            copyBtn.textContent = 'Copiado âœ…';
            setTimeout(() => copyBtn.textContent = old, 1200);
        } catch {
            alert('No pude copiar. Selecciona el folio manualmente.');
        }
    });
</script>
</body>
</html>
