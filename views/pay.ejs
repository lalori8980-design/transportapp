<!doctype html>
<html lang="es" data-theme="light">
<head>
    <%- include('partials/head') %>
    <title>Reserva creada</title>

    <style>
        .card-soft{
            background: var(--card);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            border-radius: 22px;
            overflow: hidden;
        }
        .top{
            padding: 18px 18px 14px;
            background:
                    radial-gradient(1000px 520px at 10% 0%, rgba(106,15,31,.20), transparent 55%),
                    radial-gradient(800px 420px at 90% 10%, rgba(106,15,31,.10), transparent 60%);
            border-bottom: 1px solid var(--border);
        }
        .body{ padding: 18px; }
        .title{
            letter-spacing: -.02em;
            font-weight: 650;
            margin: 0;
        }
        .meta{ color: var(--muted); font-size: .95rem; }

        .pill{
            display:inline-flex; align-items:center; gap:.5rem;
            padding:.45rem .75rem; border-radius:999px;
            border:1px solid var(--border);
            background: var(--chip-bg);
            color: var(--chip-text);
            font-weight:600; font-size:.9rem;
            white-space:nowrap;
        }

        .kv{
            list-style:none; padding:0; margin:0;
            display:grid; gap:.55rem;
        }
        .kv li{
            display:flex; justify-content:space-between; gap:12px;
            padding:.6rem .75rem;
            border:1px solid var(--border);
            border-radius:14px;
            background: color-mix(in srgb, var(--card) 86%, transparent);
        }
        .kv .k{ color: var(--muted); font-weight:500; }
        .kv .v{ color: var(--text); font-weight:500; text-align:right; }

        .btn-xs{
            padding:.5rem .8rem;
            border-radius:12px;
            font-weight:600;
            font-size:.95rem;
        }
        .btn-ghost{
            border:1px solid var(--border);
            background:transparent;
            color: var(--text);
        }
        .btn-ghost:hover{
            border-color: color-mix(in srgb, var(--wine) 40%, var(--border));
            background: color-mix(in srgb, var(--card) 70%, transparent);
            color: var(--text);
        }

        .note{
            border:1px solid var(--border);
            background: color-mix(in srgb, var(--card) 82%, transparent);
            border-radius: 16px;
            padding: 12px 14px;
            color: var(--muted);
        }

        .mono{
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono","Courier New", monospace;
            font-size: .95rem;
            color: var(--text);
            word-break: break-word;
        }
    </style>
</head>

<body>
<nav class="navbar navbar-dark app-navbar">
    <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <span class="brand-dot"></span>
            <span class="fw-semibold">TransportApp</span>
        </a>

        <button id="themeToggle" class="theme-btn" type="button" aria-label="Cambiar tema">
            <span id="themeIcon">ðŸŒ™</span> <span class="d-none d-sm-inline">Tema</span>
        </button>
    </div>
</nav>

<main class="container py-4">

    <div class="card-soft">
        <div class="top">
            <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
                <div>
                    <div class="pill">Reserva creada</div>
                    <h1 class="h3 title mt-2">Listo</h1>
                    <div class="meta mt-1">Tu folio es:</div>
                    <div class="mono mt-1" id="folioText"><%= folio %></div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-ghost btn-xs" id="copyBtn">Copiar folio</button>
                    <a class="btn btn-wine btn-xs" id="waBtn" target="_blank" href="#">Enviar por WhatsApp</a>
                </div>
            </div>
        </div>

        <div class="body">
            <ul class="kv mb-3">
                <li>
                    <span class="k">Ruta</span>
                    <span class="v"><%= r.direction === "VIC_TO_LLE" ? "Victoria - Llera" : "Llera - Victoria" %></span>
                </li>
                <li><span class="k">Fecha</span><span class="v"><%= r.trip_date %></span></li>
                <li><span class="k">Hora</span><span class="v"><%= r.depart_time %></span></li>
                <li><span class="k">Contacto</span><span class="v"><%= r.customer_name %></span></li>
                <li><span class="k">TelÃ©fono</span><span class="v" id="phoneText"><%= r.phone %></span></li>
                <li><span class="k">Estado</span><span class="v">Pendiente de confirmaciÃ³n</span></li>
            </ul>

            <div class="note">
                El ticket se emite cuando el administrador confirma el pago. Puedes enviar el folio por WhatsApp para agilizar.
            </div>

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a class="btn btn-ghost btn-xs" href="/reserve">Nueva reserva</a>
                <a class="btn btn-ghost btn-xs" href="/">Volver al inicio</a>
            </div>
        </div>
    </div>

</main>

<script src="/js/theme.js"></script>

<!-- Datos del servidor en JSON -->
<script type="application/json" id="reservationData">
<%- JSON.stringify({
        folio: folio,
        direction: r.direction,
        trip_date: r.trip_date,
        depart_time: r.depart_time,
        customer_name: r.customer_name,
        phone: r.phone,

        // Ajusta si tus campos se llaman distinto:
        reservation_type: r.reservation_type || r.type || r.booking_type || r.service_type || "",
        passengers: r.passengers || r.pax || r.num_passengers || r.seats || "",
        package_details: r.package_details || r.package_info || r.details || r.notes || ""
    }) %>
</script>

<script>
    const copyBtn = document.getElementById('copyBtn');
    const waBtn = document.getElementById('waBtn');

    // Numero del admin/servicio (a quien le llega el WhatsApp)
    const adminWa = "8344756376";

    function digitsOnly(s){ return String(s || '').replace(/\D/g,''); }

    // Parsear datos del servidor
    let data = {};
    try {
        const raw = document.getElementById('reservationData')?.textContent || "{}";
        data = JSON.parse(raw);
    } catch {
        data = {};
    }

    function niceRoute(dir){
        return dir === "VIC_TO_LLE" ? "Victoria a Llera" : "Llera a Victoria";
    }

    function niceType(t){
        const x = String(t || '').toLowerCase();
        if (x.includes('paq') || x.includes('pack')) return 'Paqueteria';
        if (x.includes('pas')) return 'Pasaje';
        return t ? t : 'No especificado';
    }

    const typeLabel = niceType(data.reservation_type);
    const isPackage = typeLabel.toLowerCase().includes("paqu");
    const isPassenger = typeLabel.toLowerCase().includes("pas");

    const pax = Number(String(data.passengers || "").trim());
    const paxValid = !Number.isNaN(pax) && pax > 0;

    // Mensaje como cliente, sin emojis, con formato simple
    const lines = [
        "Hola, acabo de realizar una reserva y me gustarÃ­a que me ayuden a confirmarla.",
        "",
        "Datos de la reserva",
        "-------------------",
        `Folio: ${data.folio || "-"}`,
        `Nombre: ${data.customer_name || "-"}`,
        `Telefono: ${data.phone || "-"}`,
        `Tipo: ${typeLabel}`,
        `Ruta: ${niceRoute(data.direction)}`,
        `Fecha: ${data.trip_date || "-"}`,
        `Hora: ${data.depart_time || "-"}`,
        (isPassenger && paxValid) ? `Pasajeros: ${pax}` : null,
        "Estado: Pendiente de confirmacion",
        isPackage ? "" : null,
        isPackage ? "Detalles de paqueteria" : null,
        isPackage ? "---------------------" : null,
        isPackage ? (data.package_details ? String(data.package_details) : "-") : null
    ].filter(Boolean);

    const msg = lines.join("\n");

    // Link WhatsApp al admin
    const adminDigits = digitsOnly(adminWa);
    if (adminDigits.length >= 10) {
        waBtn.href = `https://wa.me/52${adminDigits}?text=${encodeURIComponent(msg)}`;
    } else {
        waBtn.classList.add('disabled');
        waBtn.setAttribute('aria-disabled','true');
    }

    // Copiar folio
    copyBtn?.addEventListener('click', async () => {
        try{
            await navigator.clipboard.writeText(String(data.folio || ''));
            const old = copyBtn.textContent;
            copyBtn.textContent = 'Copiado';
            setTimeout(() => copyBtn.textContent = old, 1200);
        } catch {
            alert('No pude copiar. Selecciona el folio manualmente.');
        }
    });
</script>
</body>
</html>
